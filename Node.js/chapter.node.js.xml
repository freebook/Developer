<chapter id="install">
	<title>Node.js 安装</title>
	<ulink url="http://nodejs.org/" />
	<section id="ubuntu">
		<title>Ubuntu</title>
		<screen>
$ sudo apt-get install nodejs
$ sudo apt-get install npm
		</screen>		
	</section>
	<section id="centos">
		<title>CentOS</title>
		<screen>
[root@netkiller www]# yum install -y nodejs
[root@netkiller www]# node --version
v6.9.1
		</screen>
	</section>
	<section id="npm">
		<title>npm -- node package manager</title>
		<para>npm registry</para>
		<screen>
$ npm install mysql
		</screen>
		<section>
			<title>link</title>
			<screen>
# npm link gulp
/root/node_modules/gulp -> /srv/node-v7.10.0-linux-x64/lib/node_modules/gulp
			</screen>
		</section>
	</section>
	<section id="pm2">
		<title>pm2</title>
		<subtitle>Production process manager for Node.js apps with a built-in load balancer http://pm2.io</subtitle>
		<screen>
npm install -g pm2		
		</screen>
		<section>
			<title>logs</title>
			<screen>
$ pm2 logs project --lines 100			
			</screen>
		</section>
	</section>
	<section>
		<title>Loop</title>
		<section>
			<title>forEach</title>
			<screen>
			<![CDATA[
arr.forEach(function (item) {
  someFn(item);
})

elements.forEach(function(element){
  
});
			]]>
			</screen>
		</section>
	</section>
</chapter>

